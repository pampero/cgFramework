@{
    Layout = null;
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
    <h2>Knockout Sample</h2>
    <p>Make your on seat reservations</p>

    <table>
        <thead>
            <tr>
                <th>Passenger name</th>
                <th>Meal</th>
                <th>Surcharge</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: seats">
            <tr>
                <td>
                    <input type="text" placeholder="Enter name" data-bind="value: name" />
                </td>
                <td>
                    <select data-bind="options: $root.availableMeals, value: meal, optionsText: 'mealName'"></select></td>
                <td data-bind="text: formattedPrice"></td>
                <td><a href="#" data-bind="click: $root.removeSeat">Remove</a></td>
            </tr>
        </tbody>
    </table>
    <br />
    <button class="btn btn-primary btn-large" data-bind="click: addSeat">Reserve another seat</button>

    <h3 data-bind="visible: totalSurcharge() > 0">Total surcharge: $<span data-bind="text: totalSurcharge().toFixed(2)"></span>
    </h3>
</div>

<div class="hero-unit">
    <h2>JQuery Sample</h2>

    <p>JQuery UI Calendar, JGrowl</p>

    <p>
        <span>Date&nbsp;</span>
        <input id="DateCreated" maxlength="10" type="text" name="Created"  />
       
    </p>
    <p>
        <button id="btnGrowl" class="btn btn-primary btn-large">Show Notification</button>
